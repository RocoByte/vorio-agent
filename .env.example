# Vorio Cloud Configuration
VORIO_API_URL=https://api.vorio.app
VORIO_AGENT_TOKEN=vat_your_agent_token_here

# Controller Type (unifi, mikrotik, openwrt, custom)
# Determines which adapter to use
CONTROLLER_TYPE=unifi

# ============================================================
# UniFi Controller Configuration (if CONTROLLER_TYPE=unifi)
# ============================================================
UNIFI_HOST=192.168.1.1
UNIFI_PORT=443
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your_password
UNIFI_SITE=default

# Optional: Skip SSL verification for self-signed certificates
UNIFI_SKIP_SSL_VERIFY=false

# ============================================================
# MikroTik Configuration (if CONTROLLER_TYPE=mikrotik)
# Coming soon!
# ============================================================
# MIKROTIK_HOST=192.168.1.1
# MIKROTIK_PORT=8728
# MIKROTIK_USERNAME=admin
# MIKROTIK_PASSWORD=your_password
# MIKROTIK_USE_SSL=false

# ============================================================
# Sync Configuration
# ============================================================
# Sync interval in milliseconds (default: 120000 = 2 minutes)
SYNC_INTERVAL_MS=120000
